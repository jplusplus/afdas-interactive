.nav
    a.nav-toggler.js-nav-toggler
        span.hide-text Menu

    a.nav-analyse.js-analyse-toggler
        span.hide-text Analyse de l'Observatoire

    unless data["no-menu"]
        .steps.hidden
            a.pull-right.js-nav-toggler Fermer
            h3 Choisissez<br /> un chapitre
            ul.chapters
                each step, stepKey in data.steps
                    li(class=(step["no-index"] ? "hidden":""))
                        a.to-step(href="#step="+stepKey, data-step=stepKey)
                            span.wrapper!=(step["menu-name"] || step["name"])

    unless data["no-arrows"]
        ul.arrows
            li
                a.previous(title="Précendent") &larr;
            li
                a.next(title="Suivant") &rarr;

    //- !! Deactivated !!
    if data["tiny-scroll"]
        .tiny-scroll
            .wrapper.arrows
                a.previous(title="Précendent") &larr;
                a.next(title="Suivant") &rarr;
                .tracker
            //- Empty elements
            .shadow
            .triangle